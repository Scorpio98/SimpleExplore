<?xml version="1.0" encoding="utf-8"?>
<menu
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="AlwaysShowAction">

	
	<item
        android:id="@+id/action_search"
        android:icon="@drawable/action_search"
        android:orderInCategory="100"
        android:title="搜索"
        app:actionViewClass="android.support.v7.widget.SearchView"
        app:showAsAction="always|collapseActionView" />
	
    <item
        android:id="@+id/action_sort"
        android:icon="@drawable/action_sort"
        android:orderInCategory="100"
        android:title="分类"
        app:showAsAction="always">
        <menu>
            <group android:checkableBehavior="single">
                <item
                    android:id="@+id/action_sort_by_name"
					android:checked="true"
                    android:title="名称" />
                <item
                    android:id="@+id/action_sort_by_type"
                    android:title="类型" />
                <item
                    android:id="@+id/action_sort_by_size"
                    android:title="大小" />
                <item
                    android:id="@+id/action_sort_by_last_modified"
                    android:title="最后修改" />
            </group>
            <item
                android:id="@+id/action_sort_order_ascending"
                android:checkable="true"
				android:checked="true"
                android:title="升序" />
            <item
                android:id="@+id/action_sort_directories_first"
                android:checkable="true"
				android:checked="true"
                android:title="文件夹优先" />
        </menu>
    </item>
	<item
        android:id="@+id/action_multi_select"
        android:icon="@drawable/action_multi_select"
        android:orderInCategory="100"
        android:title="多选"
        app:showAsAction="always|collapseActionView" />
	
	<item
        android:id="@+id/action_new_file"
        android:orderInCategory="100"
        android:title="新建"
        app:showAsAction="never" />

	<item
        android:id="@+id/action_select_all"
        android:orderInCategory="100"
        android:title="全选"
        app:showAsAction="never" />

	<item
        android:id="@+id/action_reverse_select"
        android:orderInCategory="100"
        android:title="反选"
        app:showAsAction="never" />

	<item
        android:id="@+id/action_refresh"
        android:orderInCategory="100"
        android:title="刷新"
        app:showAsAction="never" />


	<item
        android:id="@+id/action_new_task"
        android:orderInCategory="100"
        android:title="新建窗口"
        app:showAsAction="never" />


    <item
        android:id="@+id/action_show_hidden_file"
        android:orderInCategory="100"
        android:title="隐藏文件"
        android:checkable="true"
        app:showAsAction="never" />


    <item
        android:id="@+id/action_copy_path"
        android:orderInCategory="100"
        android:title="复制路径"
        app:showAsAction="never" />


    <item
        android:id="@+id/action_add_bookmark"
        android:orderInCategory="100"
        android:title="添加书签"
        app:showAsAction="never" />


	<item
        android:id="@+id/action_exit"
        android:orderInCategory="100"
        android:title="退出"
        app:showAsAction="never" />

</menu>


